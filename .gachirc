# This file configures GachiScript behavior for your project

[general]
# Enable/disable Billy quotes in output
quotes = true

# Strict mode for validation
strict_mode = false

# Default framework detection
framework = "auto"

# Output directory for transpiled files
output_dir = "./dist"

# File extensions to process
extensions = [".gachi", ".ts", ".tsx", ".js", ".jsx"]

[transpiler]
# Add random quotes to generated code
add_random_quotes = true

# Preserve original comments
preserve_comments = true

# Enable framework-specific transformations
framework_aware = true

# Target ES version
target = "ES2020"

[testing]
# Use GachiTest for all test files
use_gachitest = true

# Test file patterns
test_patterns = [
  "**/__tests__/**/*.{test,spec}.{js,ts,gachi}",
  "**/*.(test|spec).{js,ts,gachi}"
]

# Enable test coverage
coverage = true

# Coverage threshold
coverage_threshold = 80

[vscode]
# Enable VSCode extension features
enable_extension = true

# Show Billy quotes in tooltips
show_quotes_in_tooltips = true

# Auto-complete suggestions
enable_autocomplete = true

# Syntax validation
enable_validation = true

[build]
# Watch mode for development
watch = false

# Minify output
minify = false

# Generate source maps
source_maps = true

# Clean output directory before build
clean = true

[framework.react]
# Transform JSX to GachiML
transform_jsx = true

# Transform React hooks
transform_hooks = true

# Add React-specific quotes
react_quotes = true

[framework.angular]
# Transform decorators
transform_decorators = true

# Transform lifecycle hooks
transform_lifecycle = true

[framework.vue]
# Transform template syntax
transform_template = true

# Transform Vue composition API
transform_composition = true

