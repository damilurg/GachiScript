[linting]
# Enable GachiScript linting rules
enable_linting = true

# Rules to enable
rules = [
  "prefer-tight-over-flexible",
  "require-billy-quotes",
  "no-wrong-version",
  "dungeon-master-convention",
  "performance-naming"
]

# Maximum line length for Gachi code
max_line_length = 120

[git]
# Auto-generate Gachi commit messages
gachi_commits = false

# Commit message template
commit_template = "feat: {type} - {message} RIGHT VERSION!"

[deployment]
# Deploy as GachiScript or transpiled JS
deploy_format = "transpiled"

# Deployment target
target_env = "production"

# Environment variables prefix
env_prefix = "GACHI_"